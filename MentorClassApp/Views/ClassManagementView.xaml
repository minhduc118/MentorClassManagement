<UserControl  x:Class="MentorClassApp.Views.ClassManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="491" Width="970">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  Text="Quản lý lớp học" FontSize="25"
                   FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,16" TextAlignment="Center" HorizontalAlignment="Left"/>
        <GroupBox Header="Danh Sách Lớp Học" FontWeight="Bold" Margin="0,36,0,0">
            <DataGrid x:Name="ClassesDataGrid"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="ClassesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClassId}" Width="60"/>
                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding ClassName}" Width="*"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="150"/>
                    <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Học phí" Binding="{Binding TuitionFee, StringFormat={}{0:N0} đ}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="170"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!--Dòng 1-->
                <TextBlock Text="Tên Lớp:" Margin="0,0,5,0" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="txtClassName" Width="120" Margin="0,0,10,5" ToolTip="Tên lớp" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Mô tả:" Margin="0,0,5,5" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2"/>
                <TextBox x:Name="txtDescription" Width="160" Margin="0,0,10,5" ToolTip="Mô tả" Grid.Row="0" Grid.Column="3"/>
                <!-- Dòng 2 -->
                <TextBlock Text="Ngày bắt đầu:" Margin="0,0,5,5" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                <DatePicker x:Name="dpStartDate" Width="120" Margin="0,0,10,5" Grid.Row="1" Grid.Column="1" />

                <TextBlock Text="Ngày kết thúc:" Margin="0,0,5,5" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2"/>
                <DatePicker x:Name="dpEndDate" Width="120" Margin="0,0,10,5" Grid.Row="1" Grid.Column="3" />

                <!-- Dòng 3 -->
                <TextBlock Text="Học phí:" Margin="0,0,5,0" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtTuitionFee" Width="100" Margin="10,0,10,0" ToolTip="Học phí" Grid.Row="2" Grid.Column="1" />
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                <Button Content="Thêm mới" Width="80" Margin="5,0,5,0" Click="Add_Click"/>
                <Button Content="Sửa" Width="60" Margin="5,0,5,0" Click="Edit_Click"/>
                <Button Content="Xóa" Width="60" Margin="5,0,5,0" Click="Delete_Click"/>
                <Button Content="Làm mới" Width="80" Margin="5,0,0,0" Click="Clear_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>