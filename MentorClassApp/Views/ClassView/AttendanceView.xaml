<UserControl x:Class="MentorClassApp.Views.ClassView.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="500" Width="970">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề buổi học -->
        <TextBlock x:Name="LessonTitleTextBlock"
                   FontSize="22" FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,16"
                   Grid.Row="0"/>

        <!-- Danh sách học sinh -->
        <DataGrid x:Name="AttendanceDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          Margin="0,0,0,10"
          ItemsSource="{Binding AttendanceList}">
            <DataGrid.Columns>
                <!-- Mã học sinh -->
                <DataGridTextColumn Header="ID" Binding="{Binding StudentID}" Width="80" IsReadOnly="True"/>

                <!-- Họ tên học sinh -->
                <DataGridTextColumn Header="Họ tên" Binding="{Binding FullName}" Width="*" IsReadOnly="True"/>

                <!-- Có mặt: CheckBox có thể chỉnh sửa -->
                <DataGridTemplateColumn Header="Có mặt" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsPresent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
          HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Ghi chú: TextBox có thể chỉnh sửa -->
                <DataGridTemplateColumn Header="Ghi chú" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
         BorderThickness="0" Padding="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Nút lưu -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="100" Margin="5" Click="SaveAttendance_Click"/>
            <Button Content="Huỷ" Width="100" Margin="5" Click="CancelAttendance_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
