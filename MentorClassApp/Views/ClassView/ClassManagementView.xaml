<UserControl  x:Class="MentorClassApp.Views.ClassManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="491" Width="970">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"  Text="Quản lý lớp học" FontSize="25"
                   FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,16" TextAlignment="Center" HorizontalAlignment="Left"/>
        <GroupBox Header="Danh Sách Lớp Học" FontWeight="Bold" Margin="0,36,0,0">
            <DataGrid x:Name="ClassesDataGrid"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="ClassesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClassId}" Width="60"/>
                    <DataGridTextColumn Header="Tên lớp" Binding="{Binding ClassName}" Width="*"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="150"/>
                    <DataGridTextColumn Header="Ngày bắt đầu" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="110"/>
                    <DataGridTextColumn Header="Học phí" Binding="{Binding TuitionFee, StringFormat={}{0:N0} đ}" Width="120"/>
                    <DataGridTemplateColumn Header="Activities" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Lesson" 
                        Margin="2" Padding="4,2" 
                        Click="AddLesson_Click"/>
                                    <Button Content="Student" 
                        Margin="2" Padding="4,2" 
                        Click="AddStudent_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>


        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
            <Button Content="Thêm mới" Width="80" Margin="5,0,5,0" Click="Add_Click"/>
            <Button Content="Sửa" Width="60" Margin="5,0,5,0" Click="Edit_Click"/>
            <Button Content="Xóa" Width="60" Margin="5,0,5,0" Click="Delete_Click"/>
        </StackPanel>


    </Grid>
</UserControl>