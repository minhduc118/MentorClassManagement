<UserControl x:Class="MentorClassApp.Views.ClassManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="400" MinWidth="600"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#21618C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2ECC71"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#27AE60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#2C3E50"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" 
                                    Background="#34495E" 
                                    Padding="12,8"
                                    CornerRadius="4,4,0,0">
                                <ContentPresenter ContentSource="Header"
                                                TextBlock.Foreground="White"
                                                TextBlock.FontWeight="SemiBold"/>
                            </Border>
                            <Border Grid.Row="1" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="0,0,4,4">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#E5E5E5" 
                BorderThickness="0,0,0,1"
                Padding="0,0,0,15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quản lý lớp học" 
                               FontSize="24"
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Quản lý thông tin các lớp học trong hệ thống" 
                               FontSize="14"
                               Foreground="#7F8C8D"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="+ Thêm lớp học mới" 
                        Style="{StaticResource PrimaryButton}"
                        Width="160"
                        Height="36"
                        Click="Add_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <GroupBox Grid.Row="1" 
                  Header="Danh Sách Lớp Học" 
                  Style="{StaticResource ModernGroupBox}">
            <DataGrid x:Name="ClassesDataGrid"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionChanged="ClassesDataGrid_SelectionChanged"
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding ClassId}" 
                                        Width="50"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTextColumn Header="Tên lớp" 
                                        Binding="{Binding ClassName}" 
                                        Width="200"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTextColumn Header="Mô tả" 
                                        Binding="{Binding Description}" 
                                        Width="250"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTextColumn Header="Ngày bắt đầu" 
                                        Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" 
                                        Width="120"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTextColumn Header="Ngày kết thúc" 
                                        Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" 
                                        Width="120"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTextColumn Header="Học phí" 
                                        Binding="{Binding TuitionFee, StringFormat={}{0:N0} VNĐ}" 
                                        Width="140"
                                        ElementStyle="{StaticResource {x:Type TextBlock}}"/>
                    <DataGridTemplateColumn Header="Thao tác" Width="220">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="4">
                                    <Button Content="Bài học" 
                                            Style="{StaticResource SecondaryButton}"
                                            Width="50"
                                            Height="26"
                                            Margin="1" 
                                            Click="AddLesson_Click"
                                            ToolTip="Quản lý bài học"/>
                                    <Button Content="Học sinh" 
                                            Style="{StaticResource SecondaryButton}"
                                            Width="55"
                                            Height="26"
                                            Margin="1" 
                                            Click="AddStudent_Click"
                                            ToolTip="Quản lý học sinh"/>
                                    <Button Content="Sửa" 
                                            Style="{StaticResource EditButton}"
                                            Width="35"
                                            Height="26"
                                            Margin="1" 
                                            Click="Edit_Click"
                                            ToolTip="Chỉnh sửa lớp học"/>
                                    <Button Content="Xóa" 
                                            Style="{StaticResource DeleteButton}"
                                            Width="35"
                                            Height="26"
                                            Margin="1" 
                                            Click="Delete_Click"
                                            ToolTip="Xóa lớp học"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Footer with Statistics -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#E5E5E5" 
                BorderThickness="0,1,0,0"
                Padding="0,15,0,0"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Tổng số lớp học: " 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TotalClassesText" 
                               Text="0" 
                               FontWeight="Bold"
                               Foreground="#3498DB"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" | Lớp đang hoạt động: " 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>
                    <TextBlock x:Name="ActiveClassesText" 
                               Text="0" 
                               FontWeight="Bold"
                               Foreground="#2ECC71"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                   
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>