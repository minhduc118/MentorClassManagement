<Window x:Class="MentorClassApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MentorClassApp"
        mc:Ignorable="d"
               Title="Đăng nhập" Height="220" Width="360">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Tài khoản:" Grid.Row="0" Margin="0,0,0,8"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Margin="80,0,0,8" Width="200"/>

        <TextBlock Text="Mật khẩu:" Grid.Row="1" Margin="0,0,0,8"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="80,0,0,8" Width="200"/>

        <Button Content="Đăng nhập" Grid.Row="2" Width="100" Height="35" Margin="80,12,0,0"
                Click="Login_Click"/>
    </Grid>
</Window>
